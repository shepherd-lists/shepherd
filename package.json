{
  "name": "shepherd",
  "version": "0.1.1",
  "description": "Server that creates & maintains a strict adult content filter list.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "start": "docker-compose up --build -d",
    "logs": "docker-compose logs -f --tail=15",
    "docker:up": "docker-compose up --build -d && docker-compose logs -f",
    "docker:down": "docker-compose down --remove-orphans",
    "docker:rebuild": "npm run docker:down && npm run docker:up",
    "docker:test": "docker-compose -f docker-compose.test.yml build && docker-compose -f docker-compose.test.yml run test npm test && docker-compose -f docker-compose.test.yml rm -f",
    "docker:testconf": "docker-compose -f docker-compose.test.yml build && docker-compose -f docker-compose.test.yml run test npm run test:config && docker-compose -f docker-compose.test.yml rm -f",
    "docker:psql": "docker exec -it shepherd_pgdb_1 psql -U postgres arblacklist",
    "docker:rating": "docker-compose up --build rating",
    "docker:scanner": "docker-compose up --build scanner",
    "docker:webserver": "docker-compose up --build webserver",
    "test:img": "mocha -r ts-node/register tests/image-prepare.spec.ts",
    "test:vid": "mocha -r ts-node/register tests/video-prepare.spec.ts",
    "test:vidbad": "mocha -r ts-node/register tests/video-badtx.spec.ts",
    "test:config": "mocha -r ts-node/register tests/load-config.spec.ts",
    "test:grep": "mocha -r ts-node/register tests/**/*.spec.ts --grep",
    "test": "mocha -r ts-node/register tests/**/*.spec.ts",
    "postversion": "git push && git push --tags"
  },
  "keywords": [],
  "author": "Ros McMahon <ros@arweave.org>",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@types/sinon": "^10.0.0",
    "chai": "^4.3.4",
    "mocha": "^9.0.2",
    "sinon": "^11.1.1"
  },
  "dependencies": {
    "@slack/webhook": "^6.0.0",
    "@types/express": "^4.17.11",
    "@types/node": "^16.3.1",
    "@types/rimraf": "^3.0.1",
    "@types/shelljs": "^0.8.9",
    "ansi-colors": "^4.1.1",
    "ar-gql": "0.0.6",
    "axios": "^0.21.1",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "file-type": "^16.5.3",
    "knex": "^0.95.4",
    "knex-utils": "^5.3.2",
    "pg": "^8.6.0",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-node": "^10.2.1",
    "typescript": "^4.2.4"
  }
}
